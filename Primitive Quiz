#include <iostream>
#include <string>

using namespace std;
int main() 
{
	string capital;
	cout << "What is the capital of France?" << endl;
	cin >> capital;

	if (capital == "paris" || capital == "Paris")
	{
		if (capital == "paris")
		{
			cout << "Correct, but needs to be capitalized next time!" << endl;
		}
		else
		{
			cout << "Correct!" << endl;
		}
	}
	else
	{
		cout << "Wrong answer!" << endl;
	}

	cin.get();
	return 0;
}
